<body class="row paper margin-top-small padding-left-large col-4 col">

  <form class="row flex-center form signin-form">
    <h1 class="col-12 col">Sign Up!</h1>
    <div class=" col-12 col form-group">
      <label for="paperInputs1">Username:</label>
      <input type="text" placeholder="Enter your username here" id="usernameSignup">
    </div>

    <div class=" col-12 col form-group">
      <label for="paperInputs1">Password:</label>
      <input type="password" placeholder="Enter your password here" id="passwordSignup">
    </div>

    <div class=" col-12 col form-group">
      <label for="paperInputs1">Confirm Password:</label>
      <input type="password" placeholder="Enter your password here" id="passwordConfirm">
    </div>
    <button class="btn-primary-outline col-12 col form-group btn btn-primary" type="submit">Sign Me Up!</button>
    <a href="/users/login">Already Have an Account?</a>
  </form>
</body>