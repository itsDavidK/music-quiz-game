<body class="paper">
  <nav class="border fixed split-nav">
    <div class="nav-brand">
      {{#if loggedIn}}
      <h3>Welcome {{userInfo.username}}! </h3>
      {{else}}
      <h3>Welcome Guest!</h3>
      {{/if}}
    </div>
    <div class="collapsible">
      <input id="collapsible1" type="checkbox" name="collapsible1">
      <label for="collapsible1">
        <div class="bar1"></div>
        <div class="bar2"></div>
        <div class="bar3"></div>
      </label>
      <div class="collapsible-body">
        <ul class="inline">

          {{#if loggedIn}}
          <button id="logout" class="btn-no-style">Logout</button>
          <a href="/userpage"><button>Profile</button></a>
          {{else}}
          <li><a href="/users/signup">Sign Up</a></li>
          <li><a href="/users/login">Login</a></li>
          {{/if}}

          <li>
            <label class="paper-btn" for="modal-about">About</label>
            <input class="modal-state" id="modal-about" type="checkbox">
            <div class="modal">
              <label class="modal-bg" for="modal-about"></label>
              <div class="modal-body">
                <h4 class="modal-title">What is This?</h4>
                <p class="modal-text">Music Quiz was a project created by Jordan
                  Johnson, Sangmi Yun, David Kovalchuk, and a whole lot of guava.</p>
                <label for="modal-about">Nice!</label>
              </div>
            </div> 
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="topleft"><a href="/"><p><span class="badge secondary">&lt;-</span> Take me back home!</p></a></div>

  <div class="row flex-center">
    <h1>Choose Your Gamemode!</h1>
  </div>

  <div class="row flex-center">

    <div class="margin">
      <div class="card" style="width: 20rem;">
        <div class="card-body">
          <h4 class="card-title">Random Quiz</h4>
          <h5 class="card-subtitle">How To Play?</h5>
          <p class="card-text">Choose which song has the most views. The songs are randomly generated!</p>
          <a href="/play-alone"><button>Play Now!</button></a>
        </div>
        <img class="image-bottom" src="/assets/images/random.jpg" alt="Image of a stickman taking a quiz by himself.">
      </div>
    </div>
    </div>

<!-- Custom quizzes go under here -->

      <table class="table-hover">
        <thead>
          <tr>
            <th>Quiz ID</th>
            <th>Name of Quiz</th>
          </tr>
        </thead>
        <tbody>
          {{#each plainData.Quizzes}}
          <tr>
            <td>{{id}}</td>
            <td>{{quiz_title}}</td>
            <td><a href="/play-custom/{{id}}"><button class="btn-small btn-success-outline">Play</button></a></td>
          </tr>
          {{/each}}
        </tbody>
      </table>



</body>
